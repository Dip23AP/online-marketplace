<div class="card">

  <div class="card-header">{{inHTMLData title}}</div>
  <img class="card-img-top img-fluid" src="{{inDoubleQuotedAttr screenshot}}" alt="{{inDoubleQuotedAttr title}} Screenshot">
  <div class="card-block">
    <p class="card-text">{{inHTMLData description}}</p>
    <a href="{{inDoubleQuotedAttr link}}" class="btn btn-outline-primary"><i class="fa fa-fw fa-search"></i> View</a>
    <a href="#" class="btn btn-outline-primary buy-product" data-description="{{inDoubleQuotedAttr title}} (Standard)" data-amount="{{inDoubleQuotedAttr amount}}"><i class="fa fa-fw fa-cc-stripe"></i> Buy ${{inHTMLData price}}</a>

  </div>
</div>
