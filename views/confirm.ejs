<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs') -%>
<body>
<%- include('navigation.ejs') -%>
<div class="container-fluid pt-3">
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-block">
          <h4 class="card-title">Login Form</h4>
          <p class="card-text">Please enter your confirmation and password to continue.</h4>
          <form action="<%= link.confirm %>" method="post" enctype="application/x-www-form-urlencoded">

            <div class="form-group">
              <label for="confirmation">Enter Confirmation Code</label>
              <input type="text" class="form-control" id="confirmation" name="confirmation" aria-describedby="confirmationHelp" placeholder="Confirmation Code">
              <small id="confirmationHelp" class="form-text text-muted">We sent you a confirmation code, paste it into the box above.</small>

            </div>

            <button type="submit" class="btn btn-primary">Confirm</button>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('footer.ejs') -%>
</body>
</html>
