{{#if flashMessage}}
  <div class="alert alert-success m-0" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
       <span aria-hidden="true">&times;</span>
     </button>
    <h4 class="alert-heading">{{inHTMLData flashMessage.title}}</h4>
    <p>{{inHTMLData flashMessage.text}}</p>
    <p class="mb-0">{{inHTMLData flashMessage.description}}</p>
  </div>
{{/if}}
